<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cr_WWA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_WWRTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|start"
                android:text="Title"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:fontFamily="@font/ramarajaregular"
                android:textAppearance="@style/CustomTextAppearance"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_WWRDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:textSize="13sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="10sp"
                android:text="Description"
                android:fontFamily="@font/amiri_regular"
                android:textAppearance="@style/CustomTextAppearance"
                android:textColor="@color/cardview_dark_background" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>